<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="первое число"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/Number2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/Number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="178dp"
        android:ems="10"
        android:hint="второе число"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="429dp"
        android:hint="результат"
        android:text="результат"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Sum"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:layout_marginTop="400dp"
        android:onClick="onButtonClic"
        android:text="+"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="65dp" />

    <Button
        android:id="@+id/Multiplication"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="340dp"
        android:onClick="multiplicationOnButtonClic"
        android:text="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Division"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="402dp"
        android:onClick="divisionOnButtonClic"
        android:text="/"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Negation"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="287dp"
        android:onClick="negationOnButtonClic"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>